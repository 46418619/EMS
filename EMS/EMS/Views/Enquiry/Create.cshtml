@model EMS.Models.EnquiryDetailViewModel

@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="frmEnquiry" class="col-md-12 mb-12">
    <div class="col-md-6 mb-6">
        <div class="form-group">
            <div class="col-md-12 mb-12">
                <label for="txtFirstName">First name *</label>
                <input type="text" class="form-control" id="txtFirstName" placeholder="First name" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 mb-12">
                <label for="txtLastName">Last name *</label>
                <input type="text" class="form-control" id="txtLastName" placeholder="Last name" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 mb-12">
                <label for="txtDOB">Date of Birth(MM/dd/yyyy)</label>
                @*<input type="text" class="form-control" id="txtDOB" value="12/12/1990" placeholder="Date of Birth">*@
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" class="form-control" id="txtDOB">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 mb-12">
                    <label for="txtMobile">Mobile *</label>
                    <input type="text" class="form-control" id="txtMobile" placeholder="Mobile" pattern="^\d{10}$" required>
                </div>
            </div>
            @*<div class="input-group date" data-provide="datepicker">
                <input type="text" class="form-control">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>*@
            <div class="form-group">
                <div class="col-md-12 mb-12">
                    <label for="txtEmail">Email</label>
                    <input type="email" class="form-control" id="txtEmail" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 mb-12">
                    <label for="ddlClass">Class *</label>
                    <select id="ddlClass" class="form-control" required>
                        <option value="">None</option>
                        <option value="VIII">VIIIth</option>
                        <option value="IX">IXth</option>
                        <option value="X">Xth</option>
                        <option value="XI">XIth</option>
                        <option value="XII">XIIth</option>
                        <option value="XIIP">XIIth Passed</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 mb-12">
                    <label for="ddlStream">Stream *</label>
                    <select id="ddlStream" class="form-control" required>
                        <option value="">None</option>
                        <option value="Engineering">Engineering</option>
                        <option value="Medical">Medical</option>
                    </select>
                </div>
            </div>
            <button class="btn btn-primary" type="button" id="btnSubmit">Submit Enquiry</button>
        </div>
        <div class="col-md-6 mb-6">
        </div>
</form>
